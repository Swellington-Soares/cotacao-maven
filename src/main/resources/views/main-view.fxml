<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="413.0" prefWidth="646.0" xmlns="http://javafx.com/javafx/17.0.17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.swell.viacep.controller.MainController">
   <children>
      <HBox fillHeight="false" prefHeight="42.0" prefWidth="646.0">
         <children>
            <TextField fx:id="textFieldPesquisar" promptText="Pesquisar cep..." HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets right="16.0" />
               </HBox.margin>
            </TextField>
            <Button fx:id="btnPesquisar" mnemonicParsing="false" onAction="#btnPesquisarAction" text="Pesquisar" />
             <Button fx:id="btnPesquisar" mnemonicParsing="false" onAction="#btnLimparCacheAction" text="Limpar Cache" />
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </HBox>
      <Label fx:id="labelError" text="Falha em obter os dados." textFill="RED">
         <VBox.margin>
            <Insets left="8.0" />
         </VBox.margin>
      </Label>
      <TableView fx:id="tableView" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="logradouroColumn" editable="false" prefWidth="75.0" text="Logradouro" />
          <TableColumn fx:id="estadoColumn" editable="false" prefWidth="75.0" text="Estado" />
            <TableColumn fx:id="cidadeColumn" editable="false" prefWidth="75.0" text="Cidade" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
</VBox>
